<div class="restaurants-container">
    <%= render partial: "layouts/header" %>

    <div class="restaurants-main-content">
        <div class="long-description border-b py-6 flex items-center justify-center"> 
            <p class="text-center text-xl"> 
                <span> Have a suggestion for a guide? </span> <%= link_to "Click here", "https://forms.gle/fpBDr3BC8rgwoHop9", class: "pb-1 border-b-2 border-brand-green font-semibold", target: "_blank" %>
            </p>
        </div>
        <div class="restaurants-table-container">
            <% if @guides.any? %>
                <% @guides.each do |guide| %>
                    <h1 class="search-guides-heading"> <%= guide.name %> </h1>
                    <div class="cards-container mb-8">
                        <% guide.partners.each do |partner| %>
                                <%= render partial: "restaurants/restaurant", locals: { restaurant: partner.restaurants.first } %>
                        <% end %>
                    </div>
                <% end %>
            <% else %>
                <%= link_to "https://forms.gle/viD4gsHDrCNwxdtKA", target: "_blank" do %>
                        <p class="italic w-full"> Didn't find the restaurant you're looking for? <span class="font-bold"> Submit your request </span> and our team will look into publishing it soon! </p>
                <% end %>
            <% end %>
        </div>
    </div>
</div>